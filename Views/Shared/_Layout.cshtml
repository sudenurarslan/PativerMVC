<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pativer | Sokak Hayvanlarına Yardım Platformu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PativerMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #f8f9fc;
            --accent-color: #f6c23e;
        }

        body {
            background-color: var(--secondary-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            background: white !important;
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--primary-color) !important;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 0.35rem;
            transition: all 0.3s;
        }

        .nav-link:hover {
            background-color: rgba(78, 115, 223, 0.1);
            color: var(--primary-color) !important;
        }

        .active-nav {
            background-color: var(--primary-color) !important;
            color: white !important;
        }

        footer {
            background-color: var(--primary-color);
            color: white;
        }

        footer a {
            color: var(--accent-color) !important;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="Pativer Logo" />
                Pativer
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active-nav" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door me-1"></i> Anasayfa
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Animal" ? "active-nav" : "")"
                           asp-controller="Animal" asp-action="Index">
                            <i class="bi bi-heart me-1"></i> Sahiplendirme
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Report" ? "active-nav" : "")"
                           asp-controller="Report" asp-action="Index">
                            <i class="bi bi-exclamation-triangle me-1"></i> İhbarlar
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Donation" ? "active-nav" : "")"
                           asp-controller="Donation" asp-action="Create">
                            <i class="bi bi-cash-coin me-1"></i> Bağış Yap
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Volunteer" ? "active-nav" : "")"
                           asp-controller="Volunteer" asp-action="Index">
                            <i class="bi bi-people me-1"></i> Gönüllü Ol
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active-nav" : "")"
                           asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle me-1"></i> Hakkımızda
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="py-4 mt-5">
    <div class="container text-center">
        
        <p class="mb-0">&copy; @DateTime.Now.Year - Pativer | Sokak Hayvanlarına Yardım Platformu</p>
        <small>
            <a asp-controller="Home" asp-action="Privacy" class="text-white-50">Gizlilik Politikası</a> |
            <a href="#" class="text-white-50">Kullanım Koşulları</a>
        </small>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function () {
        $('.nav-link').each(function () {
            if ($(this).hasClass('active-nav')) {
                $(this).closest('.nav-item').addClass('fw-bold');
            }
        });
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

