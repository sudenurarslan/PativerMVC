@model IEnumerable<PativerMVC.Models.Animal>

@{
    ViewData["Title"] = "Sahiplendirilecek Hayvanlar";
}

<h1>Sahiplendirilecek Hayvanlar</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Hayvan Ekle</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        <strong>Tür:</strong> @item.Breed<br>
                        <strong>Yaş:</strong> @(item.Age.HasValue ? item.Age + " yaşında" : "Bilinmiyor")<br>
                        <strong>Açıklama:</strong> @item.Description
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detaylar</a>
                        <a asp-action="Adopt" asp-route-id="@item.Id" class="btn btn-success">Sahiplen</a>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    @item.CreatedDate.ToShortDateString()
                </div>
            </div>
        </div>
    }
</div>