@model PativerMVC.Models.Report

@{
    ViewData["Title"] = "İhbar Ver";
}

<h2>İhbar Ver</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AnimalType"></label>
        <input asp-for="AnimalType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="ImagePath">Fotoğraf URL</label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-warning">İhbarı Gönder</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}