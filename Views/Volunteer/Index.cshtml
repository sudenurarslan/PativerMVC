@model PativerMVC.Models.Volunteer
@{
    ViewData["Title"] = "Gönüllü Ol";
}

<h2>Gönüllü Ol</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="Index" method="post">
    <div class="form-group mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="VolunteerType" class="form-label"></label>
        <select asp-for="VolunteerType" class="form-control">
            <option value="">-- Görev Seçin --</option>
            <option value="Saha Gönüllüsü">Saha Gönüllüsü</option>
            <option value="Veteriner Destek">Veteriner Destek</option>
            <option value="Mama Dağıtımı">Mama Dağıtımı</option>
        </select>
        <span asp-validation-for="VolunteerType" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Başvur</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}