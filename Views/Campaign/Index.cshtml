@model IEnumerable<PativerMVC.Models.Campaign>

@{
    ViewData["Title"] = "Aktif Kampanyalar";
}

<h2>Aktif Kampanyalar</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <a asp-controller="Donation" asp-action="Create" asp-route-campaignId="@item.Id" class="btn btn-primary">Bağış Yap</a>
                </div>
            </div>
        </div>
    }
</div>